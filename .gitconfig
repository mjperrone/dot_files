	email = michael.perrone@convoy.com
[alias]
    oldbranches = for-each-ref --sort=-committerdate refs/heads/
    st = status
    dc = diff --cached
    d = diff
    dn = diff --name-only
    cm = commit -m
    co = checkout
    ap = add -p
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    ri = !sh -c 'git rebase -i `git merge-base master head`'
    delete = "!del() { git branch -D $1; git push origin :$1; }; del"
[color]
    ui = true
[core]
    excludesfile = ~/.gitignore_global
[push]
    default = simple
[pull]
    rebase = false
export PROMPT_COMMAND="$PROMPT_COMMAND"'
hpwd=$(history 1);
idnum=$(expr "$hpwd" : '\''\([0-9]*\)'\'');
hpwd="${hpwd##[0-9]* }";
if [[ ${hpwd%% *} = "cd" ]];
    then cwd=$OLDPWD;
    else cwd=$PWD;
fi;
echo "cd $cwd && $hpwd #$idnum" >> ~/.bash_directory_history;'


#output the history entry and the directory in which the command was run into .bash_directory_history 
#often context matters. 
